generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 Int                  @id @default(autoincrement())
  name               String
  email              String
  password           String
  created_at         DateTime             @default(now()) @db.Timestamp(6)
  updated_at         DateTime?            @db.Timestamp(6)
  deleted_at         DateTime?            @db.Timestamp(6)
  is_active          Boolean              @default(false)
  transaction        Transaction[]
  bill               Bill[]
  transactionHistory TransactionHistory[]
  account            Account?
  wallet             Wallet?
  send_to            Transaction[]        @relation("send_to")
  received_by        Transaction[]        @relation("received_by")
}

model Transaction {
  id                 Int                  @id @default(autoincrement())
  sender_user        User                 @relation(fields: [user_id], references: [id])
  user_id            Int
  description        String?
  send_to_id         Int?
  send_to            User?                @relation("send_to", fields: [send_to_id], references: [id])
  received_by_id     Int?
  received_by        User?                @relation("received_by", fields: [received_by_id], references: [id])
  value              Int
  category           String
  created_at         DateTime             @default(now()) @db.Timestamp(6)
  updated_at         DateTime?            @db.Timestamp(6)
  deleted_at         DateTime?            @db.Timestamp(6)
  type               transaction_type
  transactionHistory TransactionHistory[]
}

model Bill {
  id                      Int        @id @default(autoincrement())
  user                    User       @relation(fields: [user_id], references: [id])
  user_id                 Int
  description             String
  amount                  Int
  due_date                DateTime   @db.Timestamp(6)
  created_at              DateTime   @default(now()) @db.Timestamp(6)
  updated_at              DateTime?  @db.Timestamp(6)
  deleted_at              DateTime?  @db.Timestamp(6)
  status                  bill_types @default(pending)
  already_notify_due_date Boolean?   @default(false)
  already_notify_1_day    Boolean?   @default(false)
}

model TransactionHistory {
  id               Int              @id @default(autoincrement())
  transferred_in   DateTime
  transaction      Transaction      @relation(fields: [transaction_id], references: [id], onDelete: Cascade)
  transaction_id   Int
  transaction_type transaction_type
  user             User             @relation(fields: [created_by], references: [id])
  created_by       Int
  updated_at       DateTime?        @db.Timestamp(6)
  deleted_at       DateTime?        @db.Timestamp(6)
}

model Account {
  id         Int       @id @default(autoincrement())
  user       User?     @relation(fields: [user_id], references: [id])
  user_id    Int
  wallet_id  Int       @unique
  wallet     Wallet?   @relation(fields: [wallet_id], references: [id])
  created_at DateTime  @default(now()) @db.Timestamp(6)
  updated_at DateTime? @db.Timestamp(6)
  deleted_at DateTime? @db.Timestamp(6)

  @@unique([user_id])
}

model Wallet {
  id         Int       @id @default(autoincrement())
  user       User?     @relation(fields: [user_id], references: [id])
  user_id    Int
  balance    Decimal
  created_at DateTime  @default(now()) @db.Timestamp(6)
  updated_at DateTime? @db.Timestamp(6)
  deleted_at DateTime? @db.Timestamp(6)
  account    Account?

  @@unique([user_id])
}

enum transaction_type {
  entry
  exit
}

enum bill_types {
  paid
  overdue
  pending
}
